<!-- Register Developer form -->
<div class="fluid-container pt-3 loginSection">

    <!-- heading -->
    <h1 class="heading-login">Sign In</h1>
    <hr style="height:3px; width:10%">
    <p class="subHeading">Only Companies can login. </p>

    <div class="container formSection">

        <!-- partial and flash messaging -->
        <%- include ("./partials/messages") %>

        <form action='/company/login' method='POST'>
           
    
            <div class="form-group d-flex justify-content-center">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fa fa-envelope"></i>
                    </div>
                  </div> 
                  <input id="email" name="email" placeholder="Business Email" type="email" class="form-control" required="required">
                </div>
            </div>
    
            <div class="form-group d-flex justify-content-center">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fa fa-key"></i>
                    </div>
                  </div> 
                  <input id="password" name="password" placeholder="Password" type="password" class="form-control" required="required">
                </div>
            </div>
    


            <div class="form-group d-flex justify-content-center">
                <div class="custom-controls-stacked">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" checked="checked" class="custom-control-input" onclick="return false"> 
                      <label for="agree_0" class="custom-control-label" style="color:whitesmoke">Agree to our Term of Service and Privacy Policy</label>
                    </div>
                </div>
            </div>
            
            
    
            <div class="form-group  d-flex justify-content-center">
                <button id='SubmitButton' name="submit" type="submit" class="btn btn-primary">Sign In</button>
            </div>

            <div class="d-flex justify-content-center">
                <p class="haveAnAccount" style=" color:white">Don't have an Account? <a href="/company/register">Sign Up</a></p>
            </div>

        </form>
    </div>

</div>

