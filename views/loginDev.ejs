<!-- Register Developer form -->
<div class="fluid-container pt-3 loginSection">

    <!-- heading -->
    <h1 class="heading">Sign In</h1>
    <p class="subHeading">Only Developers can login. </p>

    <div class="container formSection">

        <!-- partial and flash messaging -->
        <%- include ("./partials/messages") %>

        <form action='/developer/login' method="POST">
           
            <div class="form-group d-flex justify-content-center">
                <div class="input-group" style="width:50%">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fa fa-envelope"></i>
                    </div>
                  </div> 
                  <input id="email" name="email" placeholder="Email" type="email" class="form-control" required="required">
                </div>
            </div>
    
            <div class="form-group d-flex justify-content-center">
                <div class="input-group" style="width:50%">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fa fa-key"></i>
                    </div>
                  </div> 
                  <input id="password" name="password" placeholder="Password" type="password" class="form-control" required="required">
                </div>
            </div>
    


            <div class="form-group d-flex justify-content-center">
                <div class="custom-controls-stacked" style="width:50%">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" checked="checked" class="custom-control-input" onclick="return false"> 
                      <label style="color:white" for="agree_0" class="custom-control-label">Agree to our Term of Service and Privacy Policy</label>
                    </div>
                </div>
            </div>
            
            
    
            <div class="form-group  d-flex justify-content-center">
                <button  style="width:50%" name="submit" type="submit" class="btn btn-success">Sign Up</button>
            </div>

            <br>
            <div class="form-group  d-flex justify-content-center">
                <p style="width: 50%; color:white">Don't have an Account? <a href="/developer/register" style="color:#009933">Sign Up</a></p>
            </div>

        </form>
    </div>

</div>

