<!-- 
    This partial used for mainly flash messaging  
-->

<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>

        <div class="form-group d-flex justify-content-center" style="padding-bottom: 0%; padding-top: 0%;">
            <div class="alert alert-danger alert-dismissible fade show " role="alert" style="width: 70%;">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        
    <% }); %>
<% } %>


<!-- for event happens to be successful -->
<% if(success_msg!='') { %>
    <div class="form-group d-flex justify-content-center" style="padding-bottom: 0%; padding-top: 0%;">
        <div class="alert alert-success alert-dismissible fade show " role="alert" style="width: 50%;">
            <%= success_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
<% } %>


<!-- whenever occured any error -->
<% if(error_msg!='') { %>
    <div class="form-group d-flex justify-content-center" style="padding-bottom: 0%; padding-top: 0%;">
        <div class="alert alert-warning alert-dismissible fade show " role="alert" style="width: 50%;">
            <%= error_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
<% } %>



