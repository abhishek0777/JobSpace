<div class="container-fluid companiesName">
    
        <form action="/developer/searchCompany" method='POST'>
            <div class="input-group p-3 ml-auto" style="width:30%">
            <input name='companyName' class="form-control" type="text" id="searchName" placeholder="Type a company name here...">
            <button type='submit' id='searchButton' class="btn btn-light ml-2">Search</button>
            </div>
            
        </form>
        
    
    

    <div class="container p-2">
        <div class="row">

            <!-- companies is array of company objects of 'Company Schema'-->
            <% companies.forEach(function(company){ %>
                
                <div class="col-md-4 col-sm-6 col-xs-12 mt-3">

                    <div id="<%= company.name %>" class="card custom-card-subscription" style="width: 18rem;">
                        <div class="card-body">
                        <h5 class="card-title cardCompanyName"><%= company.name %></h5>
                        <p class="card-text cardCompanyEmail"><%= company.email %></p>
                        <p class="card-text cardCompanyCountry"><%= company.country %></p>

                        <!-- Check whether developer already subscribed or not -->
                        <% 
                        flag=1;
                            user.subscribed.forEach(function(emailID){
                                if(emailID==company.email){
                                    flag=-1;
                                }
                            })
                        if(flag==-1){ %> 
                                <button class="btn btn-danger" >Subscribed</button>
                        <% } 
                        else { %>
                                <button id="subscribe/<%= company.email %>" onclick="subscribeFunction('<%= company.email %>')" class="btn btn-primary"  >Subscribe</button>
                            <% } %>
                        </div>
                    </div>
        
                </div>
                
            %>

                
            <% }) %>
            

        </div>
    </div>
</div>



