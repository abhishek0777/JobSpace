<div class="fluid-container profileSection">
    <div class="container profileForm mt-3">
        <div class="fluid-container profileHeading">
            <h5>RECRUITER</h5>
            <h1 class="btn-primary"><%= user.name %></h1>
        </div>
        
        <h5 class="Profileheading">COMPANY NAME</h5>
        <h2 class="details"><%= user.name %></h1>

        <h5 class="Profileheading">BUSINESS EMAIL</h5>
        <h2 class="details" style="text-transform: lowercase;"><%= user.email %></h2>

        <h5 class="Profileheading">COMPANY SIZE</h5>
        <h2 class="details">

            <!-- i have saved company size in (numbers),so showing accordingly -->
            <% if(user.size==1000||user.size==2000||user.size==5000) { %>
                less than <%= user.size %> employees
            <% } 
            else { %>
                more than <%= user.size-1 %> employees
            <% } %>
        </h1>

        <h5 class="Profileheading">COUNTRY</h5>
        <h2 class="details"><%= user.country %></h2>

    </div>
</div>